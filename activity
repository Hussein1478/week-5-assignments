# Base class (generic Vehicle)
class Vehicle:
    def move(self):
        print("This vehicle is moving...")

# Derived classes
class Car(Vehicle):
    def move(self):
        print("ğŸš— The car is driving on the road.")

class Bike(Vehicle):
    def move(self):
        print("ğŸš´ The bike is pedaling along the path.")

class Plane(Vehicle):
    def move(self):
        print("âœˆï¸ The plane is flying in the sky.")

class Boat(Vehicle):
    def move(self):
        print("â›µ The boat is sailing on the water.")


# Main program
if __name__ == "__main__":
    # Create a list of different vehicles
    vehicles = [Car(), Bike(), Plane(), Boat()]

    # Demonstrate polymorphism
    for v in vehicles:
        v.move()
